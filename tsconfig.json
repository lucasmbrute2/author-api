{
    "compilerOptions": {
        "target": "es2016",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "baseUrl": "./",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true,
        "paths": {
            "@app/*": ["./src/application/*"],
            "@shared/*": ["./src/shared/*"]
        }
    },
    "include": ["src/**/*"]
}
