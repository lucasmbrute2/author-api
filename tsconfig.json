{
    "compilerOptions": {
        "target": "es2016",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "ES6",
        "baseUrl": ".",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "outDir": "./build",
        "declaration": true,
        "paths": {
            "@app/*": ["./src/application/*"],
            "@shared/*": ["./src/shared/*"]
        }
    },
    "include": ["src/**/*"]
}
